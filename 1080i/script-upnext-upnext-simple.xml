<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">3012</defaultcontrol>
    <onload>Dialog.Close(fullscreeninfo,true)</onload>
    <onload>Dialog.Close(videoosd,true)</onload>
    <controls>
        <control type="group">
            <animation type="WindowOpen" reversible="false">
                <effect type="fade" start="0" end="100" time="600" />
                <effect type="slide" start="0,-115" end="0,0" time="600" />
            </animation>
            <animation type="WindowClose" reversible="false">
                <effect type="fade" start="100" end="0" time="400" />
                <effect type="slide" start="0,0" end="0,-115" time="400" />
            </animation>
            <control type="group">
                <height>80</height>
                <!-- Background -->
                <control type="image">
                    <top>0</top>
                    <width>100%</width>
                    <height>80</height>
                    <texture flipy="true" colordiffuse="dd000000">diffuse/gradient.png</texture>
                </control>
                <control type="group">
                    <top>12</top>
                    <left>20</left>
                    <width>75%</width>
                    <!-- Buttons -->
                    <control type="grouplist">
                        <orientation>horizontal</orientation>
                        <height>56</height>
                        <itemgap>10</itemgap>
                        <align>left</align>
                        <control type="button" id="3012">
                            <label>    $ADDON[service.upnext 30037] [COLOR=ff009999]$INFO[Player.TimeRemaining(ss),,][/COLOR] $ADDON[service.upnext 30035]</label>
                            <height>56</height>
                            <width min="50">auto</width>
                            <font>font20_title</font>
                            <textoffsetx>55</textoffsetx>
                            <textcolor>white</textcolor>
                            <focusedcolor>black</focusedcolor>
                            <selectedcolor>ddffffff</selectedcolor>
                            <shadowcolor>22000000</shadowcolor>
                            <aligny>center</aligny>
                            <align>center</align>
                            <texturefocus colordiffuse="white" border="5">diffuse/panel.png</texturefocus>
							<texturenofocus colordiffuse="white" border="5">netflix/frame/slimframe_hardedge.png</texturenofocus>
                            <alttexturefocus border="10" colordiffuse="FF172A91">diffuse/panel.png</alttexturefocus>
                            <alttexturenofocus border="10" colordiffuse="FF212121">netflix/frame/slimframe_hardedge.png</alttexturenofocus>
                            <pulseonselect>no</pulseonselect>
                        </control>
                        <control type="button" id="3013">
                            <label>$ADDON[service.upnext 30034]</label>
                            <height>56</height>
                            <width min="50">auto</width>
                            <font>font20_title</font>
                            <textoffsetx>15</textoffsetx>
                            <textcolor>white</textcolor>
                            <focusedcolor>black</focusedcolor>
                            <selectedcolor>ddffffff</selectedcolor>
                            <shadowcolor>22000000</shadowcolor>
                            <aligny>center</aligny>
                            <align>center</align>
                            <texturefocus colordiffuse="white" border="5">diffuse/panel.png</texturefocus>
							<texturenofocus colordiffuse="white" border="5">netflix/frame/slimframe_hardedge.png</texturenofocus>
                            <alttexturefocus border="10" colordiffuse="FF172A91">diffuse/panel.png</alttexturefocus>
                            <alttexturenofocus border="10" colordiffuse="FF212121">netflix/frame/slimframe_hardedge.png</alttexturenofocus>
                            <pulseonselect>no</pulseonselect>
                        </control>
                    </control>
                    <control type="image">
                        <width>46</width>
                        <height>46</height>
                        <aspect>keep</aspect>
                        <texture colordiffuse="$VAR[nextupbutton]">$VAR[nextupbutton_TimeRemaining]</texture>
                        <animation effect="slide" end="13,5" time="0" condition="true">Conditional</animation>
                    </control>
                </control>
            </control>
        </control>
        <control type="progress" id="3014">
            <visible>false</visible>
        </control>
    </controls>
</window>