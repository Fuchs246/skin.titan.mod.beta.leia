<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<includes>

    <include name="View_507_FanArt">
	
	 <!--View 507-->
        <control type="group">
            <visible>Control.IsVisible(507)</visible>
			<visible>Integer.IsGreater(Container(507).NumItems,0)</visible>
            <include>animation_view_change</include>
            <!-- gb , need check fanart toogle vis conditions , unneeded here -->
			<control type="image">
				<include>DimensionsFullscreen</include>
				<aligny>bottom</aligny>
				<texture>colors/color_black.png</texture>
				
				<colordiffuse>black</colordiffuse>
			</control>
			
			<!-- <colordiffuse>$VAR[ViewDetailsFocusColor]</colordiffuse> -->
			
			<!-- fanart image -->
			 <control type="image">
				<visible>!Skin.HasSetting(FanArtViewShowInfo)</visible>
				<include>DimensionsFullscreen</include>
				<texture border="20">netflix/frame/slimframe_hardedge.png</texture>
				<colordiffuse>$INFO[Skin.String(ViewDetailsBorderFocusColor)]</colordiffuse> <!-- focused frame custom library color -->
			</control>
            <control type="multiimage">
				<visible>!Skin.HasSetting(FanArtViewShowInfo)</visible>
				<right>10</right>
				<top>10</top>
				<width>1900</width>
				<height>1055</height>
				<imagepath background="true">$VAR[backgroundVar]</imagepath>
                <aspectratio>scale</aspectratio>
                <fadetime>200</fadetime>
                <include>fanartSpeed</include>
                <randomize>true</randomize>
                <loop>yes</loop>
            </control>
			<include condition="!Skin.HasSetting(FanArtViewShowInfo)">WatchedIndicatorLarge</include>
            
             <!-- ID="52" -->
            <control type="panel" id="507">
                <posx>0</posx>
                <posy>40</posy>
                <width>100%</width>
                <height>800</height>
                <onup>9000</onup>
                <ondown condition="Skin.HasSetting(EnableQuickJump)">7000</ondown>
                <ondown condition="!Skin.HasSetting(EnableQuickJump)">60</ondown>
                <onleft>507</onleft>
                <onright>507</onright>
                <viewtype label="31434">fanart</viewtype>
                <scrolltime tween="Cubic" easing="inout">500</scrolltime>
                <focusposition>0</focusposition>
                <orientation>horizontal</orientation>
                <preloaditems>2</preloaditems>
				<visible>String.IsEqual(Window(Home).Property(SkinHelper.ForcedView),507) | String.IsEmpty(Window(Home).Property(SkinHelper.ForcedView))</visible>
                <itemlayout height="2500" width="1920">
                </itemlayout>
                <focusedlayout height="2500" width="1920">
				</focusedlayout>
            </control>

			<!--Info-->
			<control type="group">
				<visible>Control.IsVisible(507) + !String.IsEmpty(ListItem.Label)</visible>
				<visible>Skin.HasSetting(FanArtViewShowInfo)</visible>
				<include>animation_view_change</include>
				<top>12%</top>
				<height>900</height>

				<control type="image">
					<posx>10</posx>
					<width>550</width>
					<height>840</height>
					<texture border="15">diffuse/bgpanel.png</texture>
					<colordiffuse>$VAR[ViewDetailsFocusColor]</colordiffuse>
				</control>
				
				<control type="grouplist">
					<!--Regie, Duration... Movies, TV-Shows, Sesaons, Music-Videos-->
					<itemgap>0</itemgap>
					<onup>500</onup>
					<ondown>500</ondown>
					<onleft>100</onleft>
					<onright>noop</onright>
					<orientation>vertical</orientation>
					<posx>40</posx>
					<posy>10</posy>
					<control type="label">
						<height>33</height>
						<width>480</width>
						<font>Bold30</font>
						<textcolor>$INFO[Skin.String(ViewDetailsHighlightTextColor)]</textcolor>
                        <shadowcolor>$INFO[Skin.String(ViewDetailsHighlightTextShadowColor)]</shadowcolor>
						<label>[UPPERCASE]$VAR[mediatitle][/UPPERCASE]</label>
					</control>
                    <control type="label">
						  <height>40</height>
						 <width>480</width>
						  <font>Reg31</font>
						  <textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
						  <shadowcolor>$INFO[Skin.String(ViewDetailsTextShadowColor)]</shadowcolor>
						  <label>$VAR[Details]</label>
					</control>
					<control type="textbox">
						<posx>0</posx>
						<posy>0</posy>
						<width>480</width>
						<height>700</height>
						<label>$VAR[Plots]</label>
						<textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
						<shadowcolor>$INFO[Skin.String(ViewDetailsTextShadowColor)]</shadowcolor>
						<align>justify</align>
						<font>Light28</font>
					</control>
				</control>
				<!-- fanart image -->
				<control type="multiimage">
					<right>0</right>
					<top>0</top>
					<width>1350</width>
					<height>840</height>
					<imagepath background="true">$VAR[backgroundVar]</imagepath>
					<aspectratio>scale</aspectratio>
					<fadetime>200</fadetime>
					<include>fanartSpeed</include>
					<randomize>true</randomize>
					<loop>yes</loop>
				</control>
				<include>WatchedIndicatorLarge</include>
				
			
				<!-- touchscreen support -->
				<!-- page button left -->
				<control type="button">
					<left>0</left>
					<top>-10</top>
					<width>30</width>
					<height>149</height>
					<align>center</align>
					<aligny>center</aligny>
					<label></label>
					<pulseonselect>false</pulseonselect>
					<texturefocus colordiffuse="white">home/basichome_left.png</texturefocus>
					<texturenofocus colordiffuse="$INFO[Skin.String(ButtonFocusColor)]">home/basichome_left.png</texturenofocus>
					<onclick>Control.Move(507,-1) </onclick>
					<visible>Skin.HasSetting(EnableTouchSupport)</visible>
				</control>

				<!-- page button right -->
				<control type="button">
					<right>0</right>
					<top>-10</top>
					<width>30</width>
					<height>149</height>
					<align>center</align>
					<aligny>center</aligny>
					<label></label>
					<pulseonselect>false</pulseonselect>
					<texturefocus colordiffuse="white">home/basichome_right.png</texturefocus>
					<texturenofocus colordiffuse="$INFO[Skin.String(ButtonFocusColor)]">home/basichome_right.png</texturenofocus>
					<onclick>Control.Move(507,1) </onclick>
					<visible>Skin.HasSetting(EnableTouchSupport)</visible>
				</control>
			
			</control>
			
		
		</control>
     </include>
	 
</includes>